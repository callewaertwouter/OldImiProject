@{
	ViewData["Title"] = "Users with Vue";
}

<div class="text-center">
	<h1 class="display-3">Users</h1>
</div>

<div id="app" class="row">
	<div class="col-md-3">
		<ul>
			<li v-for="user in users" v-on:click="getUserDetails(user)">
				{{recipe.title}}
			</li>
		</ul>
	</div>

	<div class="col-md-3">
		<div v-if="currentUser">
			<div class="form-group">
				<label>ID</label>
				<input class="form-control" v-model="currentUser.id" readonly="readonly" />
			</div>
			<div class="form-group">
				<label>E-mail</label>
				<input class="form-control" v-model="currentUser.email" readonly="readonly" />
			</div>
			<div class="form-group">
				<label>Recipes</label>
				<ul>
					<li v-for="recipe in currentUser.recipes">
						{{recipe.title}}
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/lib/vue/vue.js"></script>
	<script src="~/lib/axios/axios.min.js"></script>
	<link rel="stylesheet" type="text/css" href="~/css/site.css" />

	<script>
		const baseUrl = "https://localhost:5001/api/users";
		var app = new Vue({
			el: "#app",
			data: {
				users: [],
				currentUser: null,
				errorMessage: "",
				isLoading: false
			},

			created: function () {
				var self = this;
				self.fetchUsers();
			},

			methods: {
				fetchUsers: function () {
					var self = this;
					axios.get(`${baseUrl}`)
						.then(function (response) {
							self.recipes = response.data;
							console.log(self.users);
						})
						.catch(function (error) {
							console.error(error);
						});
				},

				getUserDetails: function (user) {
					var self = this;
					self.currentUser = user;
				}
			}
		});
	</script>
}
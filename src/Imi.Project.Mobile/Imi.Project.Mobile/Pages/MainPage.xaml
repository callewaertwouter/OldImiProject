<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Inloggen" HorizontalTextAlignment="Center" />
        <Entry x:Name="txtEmail" Text="Geef uw e-mailadres in" />
        <Button x:Name="btnLogin" Text="Inloggen" Clicked="btnLogin_Clicked" />

        <Button x:Name="btnRegister" Text="Registreren" HorizontalOptions="End" VerticalOptions="End" Clicked="btnRegister_Clicked"/>
    </StackLayout>

</ContentPage>
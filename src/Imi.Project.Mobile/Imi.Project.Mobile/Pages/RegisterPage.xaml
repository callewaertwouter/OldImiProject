<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="Registreren" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtRegisterEmail" Text="Gebruik een e-mailadres om te registreren" />
            <Button x:Name="btnRegister" Text="Registreer" Clicked="btnRegister_Clicked" />
            <Button x:Name="btnBack" Text="Terug naar inloggen" Clicked="btnBack_Clicked"  HorizontalOptions="End" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>